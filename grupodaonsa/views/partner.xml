<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_customer_key">
            <field name="name">Customer Key</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']/field[@name='user_id']" position="after">
                    <field name="customer_key"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="res_partner_search_customer_key">
            <field name="name">Search Customer Key</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="customer_key"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>